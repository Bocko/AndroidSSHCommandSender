<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidSSHCommandSender" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Hide ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:background">@color/green_bg_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_gray_200</item>
        <item name="colorSecondaryVariant">@color/green_gray_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Text Colors -->
        <item name="android:textColor">@color/green_700</item>
        <item name="android:textColorHint">@color/green_gray_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">monospace</item>
    </style>
</resources>